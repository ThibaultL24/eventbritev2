<p style="color: green"><%= notice %></p>

<h1>Attendances</h1>

<div id="attendances">
  <% @attendances.each do |attendance| %>
    <%= render attendance %>
    <p>
      <%= link_to "Show this attendance", attendance %>
    </p>
  <% end %>
  <% if current_user == @event.user %>
  <%= link_to "Modifier l'événement", edit_event_path(@event), class: "btn btn-primary" %>
  <%= button_to "Supprimer l'événement", @event, method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer cet événement ?" }, class: "btn btn-danger" %>
<% end %>
</div>

<%= link_to "New attendance", new_attendance_path %>
